{"portConfiguration" : [
	{"firingPort":"time", "inputPortValues":{"time":0,   "schedule":[1,2], "durationType":"until next", "loop":"none"}},
	{"firingPort":"time", "inputPortValues":{"time":0.5, "schedule":[1,2], "durationType":"until next", "loop":"none"}},
