{"portConfiguration": [
	/* If we request solid white, the letter should be filled with solid white. */
	{
		"firingPort": "Color",
		"inputPortValues": {
			"Color": "#ffffffff",
		},
		"outputPortValues": {
			"AllEqual": true,
		}
	},

	/* If we request semitransparent orange, the letter should be filled with semitransparent orange. */
	{
		"firingPort": "Color",
		"inputPortValues": {
			"Color": "#bf4a3280",
		},
		"outputPortValues": {
			"AllEqual": true,
		}
	},
]}
