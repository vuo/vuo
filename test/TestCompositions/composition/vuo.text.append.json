{"portConfiguration": [
	/* An empty list of texts should result in emptystring. */
	{
		"firingPort": "refresh",
		"inputPortValues": {
			"texts": [],
			"separator": ""
		},
		"outputPortValues": {
			"compositeText": null
		}
	},
	{
		"firingPort": "refresh",
		"inputPortValues": {
			"texts": [],
			"separator": "foo"
		},
		"outputPortValues": {
			"compositeText": null
		}
	},

	/* A single item in should produce that single item as output. */
	{
		"firingPort": "refresh",
		"inputPortValues": {
			"texts": [ "yay" ],
			"separator": ""
		},
		"outputPortValues": {
			"compositeText": "yay"
		}
	},
	{
		"firingPort": "refresh",
		"inputPortValues": {
			"texts": [ "yay" ],
			"separator": "foo"
		},
		"outputPortValues": {
			"compositeText": "yay"
		}
	},

	/* Multiple items in should concatenate, with separators. */
	{
		"firingPort": "refresh",
		"inputPortValues": {
			"texts": [ "foo", "bar", "baz" ],
			"separator": ""
		},
		"outputPortValues": {
			"compositeText": "foobarbaz"
		}
	},
	{
		"firingPort": "refresh",
		"inputPortValues": {
			"texts": [ "foo", "bar", "baz" ],
			"separator": " — "
		},
		"outputPortValues": {
			"compositeText": "foo — bar — baz"
		}
	},

	/* Optionally omit empty parts. */
	{
		"firingPort": "refresh",
		"inputPortValues": {
			"texts": [ "", "" ],
			"separator": ",",
			"includeEmptyParts": false,
		},
		"outputPortValues": {
			"compositeText": null
		}
	},
	{
		"firingPort": "refresh",
		"inputPortValues": {
			"texts": [ "", "", "", "baz", "quux" ],
			"separator": ",",
			"includeEmptyParts": false,
		},
		"outputPortValues": {
			"compositeText": "baz,quux"
		}
	},
	{
		"firingPort": "refresh",
		"inputPortValues": {
			"texts": [ "", "bar", "", "baz", "" ],
			"separator": ",",
			"includeEmptyParts": false,
		},
		"outputPortValues": {
			"compositeText": "bar,baz"
		}
	},
]}
