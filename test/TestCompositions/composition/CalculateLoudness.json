{"portConfiguration": [
	/* The `Adjust Volume` node lerps from the prior value to the current value.
	   Since it starts out at 0, check that first. */
	{
		"firingPort": "volume",
		"inputPortValues" : {
			"volume" : 0.0,
			"expectedLoudness" : 0.0,
			"tolerance" : 0.000001
		},
		"outputPortValues" : {
			"equal" : true
		}
	},
	/* Change to 0.5.  Lerping... */
	{
		"firingPort": "volume",
		"inputPortValues" : {
			"volume" : 0.5,
			"expectedLoudness" : 0.354,
			"tolerance" : 0.001
		},
		"outputPortValues" : {
			"equal" : true
		}
	},
	/* Leave at 0.5. */
	{
		"firingPort": "volume",
		"inputPortValues" : {
			"volume" : 0.5,
			"expectedLoudness" : 0.456,
			"tolerance" : 0.001
		},
		"outputPortValues" : {
			"equal" : true
		}
	},
	/* Change to 2.0.  Lerping... */
	{
		"firingPort": "volume",
		"inputPortValues" : {
			"volume" : 2.0,
			"expectedLoudness" : 1.450,
			"tolerance" : 0.001
		},
		"outputPortValues" : {
			"equal" : true
		}
	},
	/* Leave at 2.0. */
	{
		"firingPort": "volume",
		"inputPortValues" : {
			"volume" : 2.0,
			"expectedLoudness" : 1.834,
			"tolerance" : 0.001
		},
		"outputPortValues" : {
			"equal" : true
		}
	},
]}
