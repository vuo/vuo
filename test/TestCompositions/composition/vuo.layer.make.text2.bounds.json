{"portConfiguration":[
	// Make sure `Get Layer Bounds` outputs the correct width for non-wrapped and wrapped text.
	{"firingPort":"*", "inputPortValues":{ "WrapWidth":Infinity, "XScale":1, "Anchor":{"horizontalAlignment":"center", "verticalAlignment":"center"} }, "outputPortValues":{ "outputWidth": 12.3 }},
	{"firingPort":"*", "inputPortValues":{ "WrapWidth":4,        "XScale":1, "Anchor":{"horizontalAlignment":"center", "verticalAlignment":"center"} }, "outputPortValues":{ "outputWidth":  3.9 }},
	{"firingPort":"*", "inputPortValues":{ "WrapWidth":2,        "XScale":1, "Anchor":{"horizontalAlignment":"center", "verticalAlignment":"center"} }, "outputPortValues":{ "outputWidth":  2.1 }},
	{"firingPort":"*", "inputPortValues":{ "WrapWidth":1,        "XScale":1, "Anchor":{"horizontalAlignment":"center", "verticalAlignment":"center"} }, "outputPortValues":{ "outputWidth":  0.9 }},
	{"firingPort":"*", "inputPortValues":{ "WrapWidth":0.5,      "XScale":1, "Anchor":{"horizontalAlignment":"center", "verticalAlignment":"center"} }, "outputPortValues":{ "outputWidth":  0.6 }},

	// Ensure wrapWidth=0 doesn't hang.
	{"firingPort":"*", "inputPortValues":{ "WrapWidth":0,        "XScale":1, "Anchor":{"horizontalAlignment":"center", "verticalAlignment":"center"} }, "outputPortValues":{ "outputWidth":  0.0 }},

	{"firingPort":"*", "inputPortValues":{ "WrapWidth":Infinity, "XScale":1, "Anchor":{"horizontalAlignment":"left",   "verticalAlignment":"center"} }, "outputPortValues":{ "outputWidth": 12.3 }},
	{"firingPort":"*", "inputPortValues":{ "WrapWidth":4,        "XScale":1, "Anchor":{"horizontalAlignment":"left",   "verticalAlignment":"center"} }, "outputPortValues":{ "outputWidth":  3.9 }},
	{"firingPort":"*", "inputPortValues":{ "WrapWidth":2,        "XScale":1, "Anchor":{"horizontalAlignment":"left",   "verticalAlignment":"center"} }, "outputPortValues":{ "outputWidth":  2.1 }},
	{"firingPort":"*", "inputPortValues":{ "WrapWidth":1,        "XScale":1, "Anchor":{"horizontalAlignment":"left",   "verticalAlignment":"center"} }, "outputPortValues":{ "outputWidth":  0.9 }},
	{"firingPort":"*", "inputPortValues":{ "WrapWidth":0.5,      "XScale":1, "Anchor":{"horizontalAlignment":"left",   "verticalAlignment":"center"} }, "outputPortValues":{ "outputWidth":  0.6 }},

	{"firingPort":"*", "inputPortValues":{ "WrapWidth":Infinity, "XScale":2, "Anchor":{"horizontalAlignment":"center", "verticalAlignment":"center"} }, "outputPortValues":{ "outputWidth": 24.6 }},
	{"firingPort":"*", "inputPortValues":{ "WrapWidth":4,        "XScale":2, "Anchor":{"horizontalAlignment":"center", "verticalAlignment":"center"} }, "outputPortValues":{ "outputWidth":  8.1 }},
	{"firingPort":"*", "inputPortValues":{ "WrapWidth":2,        "XScale":2, "Anchor":{"horizontalAlignment":"center", "verticalAlignment":"center"} }, "outputPortValues":{ "outputWidth":  3.9 }},
	{"firingPort":"*", "inputPortValues":{ "WrapWidth":1,        "XScale":2, "Anchor":{"horizontalAlignment":"center", "verticalAlignment":"center"} }, "outputPortValues":{ "outputWidth":  2.1 }},
	{"firingPort":"*", "inputPortValues":{ "WrapWidth":0.5,      "XScale":2, "Anchor":{"horizontalAlignment":"center", "verticalAlignment":"center"} }, "outputPortValues":{ "outputWidth":  0.9 }},

	{"firingPort":"*", "inputPortValues":{ "WrapWidth":Infinity, "XScale":2, "Anchor":{"horizontalAlignment":"left",   "verticalAlignment":"center"} }, "outputPortValues":{ "outputWidth": 24.6 }},
	{"firingPort":"*", "inputPortValues":{ "WrapWidth":4,        "XScale":2, "Anchor":{"horizontalAlignment":"left",   "verticalAlignment":"center"} }, "outputPortValues":{ "outputWidth":  8.1 }},
	{"firingPort":"*", "inputPortValues":{ "WrapWidth":2,        "XScale":2, "Anchor":{"horizontalAlignment":"left",   "verticalAlignment":"center"} }, "outputPortValues":{ "outputWidth":  3.9 }},
	{"firingPort":"*", "inputPortValues":{ "WrapWidth":1,        "XScale":2, "Anchor":{"horizontalAlignment":"left",   "verticalAlignment":"center"} }, "outputPortValues":{ "outputWidth":  2.1 }},
	{"firingPort":"*", "inputPortValues":{ "WrapWidth":0.5,      "XScale":2, "Anchor":{"horizontalAlignment":"left",   "verticalAlignment":"center"} }, "outputPortValues":{ "outputWidth":  0.9 }},
]}
