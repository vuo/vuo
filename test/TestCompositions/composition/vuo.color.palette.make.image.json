{"portConfiguration": [
  /* An opaque image should produce a palette with the same color. */
  {
    "firingPort": "image",
    "inputPortValues": {
      "image": {"color":{"r":0,"g":0,"b":1,"a":1},"pixelsWide":1,"pixelsHigh":1},
      "colors": 1,
    },
    "outputPortValues": {
      "palette": [
        {"r":0,"g":0,"b":1,"a":1},
      ],
    }
  },

  /* A single-color opaque image should produce a palette with the same color, and black in unused palette indices. */
  {
    "firingPort": "image",
    "inputPortValues": {
      "image": {"color":{"r":0,"g":0,"b":1,"a":1},"pixelsWide":1,"pixelsHigh":1},
      "colors": 2,
    },
    "outputPortValues": {
      "palette": [
        {"r":0,"g":0,"b":1,"a":1},
        {"r":0,"g":0,"b":0,"a":1},
      ],
    }
  },

  /* A transparent image should produce a palette with the same color composited atop opaque black. */
  {
    "firingPort": "image",
    "inputPortValues": {
      "image": {"color":{"r":0,"g":0,"b":1,"a":0.5},"pixelsWide":1,"pixelsHigh":1},
      "colors": 1,
    },
    "outputPortValues": {
      "palette": [
        {"r":0,"g":0,"b":0.5,"a":1},
      ],
    }
  },
]}
