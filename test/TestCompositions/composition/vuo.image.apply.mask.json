			"image": {"color":{"r":0.7490196,"g":0.2901961,"b":0.1960784,"a":0.50196080},"pixelsWide":1,"pixelsHigh":1},
			"mask": {"color":{"r":0,"g":0,"b":0,"a":0},"pixelsWide":1,"pixelsHigh":1},
		},
		"outputPortValues": {
			"maskedImage": {"color":{"r":0,"g":0,"b":0,"a":0},"pixelsWide":1,"pixelsHigh":1},
		}
